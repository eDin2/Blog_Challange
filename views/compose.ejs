<h1>Compose</h1>


<form action="/compose" method="POST">
    <div class="form-group">
        <label for="formGroupExampleInput">Title</label>
        <input name="postTitle" type="text" class="form-control" id="formGroupExampleInput" placeholder="New Title Entry" autocomplete="off">
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Post</label>
        <textarea name="postContent" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="New Blog Entry"></textarea>
    </div>

    <button name="publish" type="submit" class="btn btn-primary">Publish</button>
</form>

